<h1><%= @song.id ? 'Edit Song' : 'Create Song' %></h1>
<hr />


<%= form_with(model: [@artist, @song], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :album %>
  <%= f.text_field :album %>
  <br />
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>
